<body>
    <h1>Shopping Cart</h1>
    <table id="cart">
      <thead>
        <tr>
          <th>Product Name</th>
          <th>Unit Price</th>
          <th>Size</th>
          <th>Quantity</th>
          <th>Subtotal</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
      {{#each cart}}
        <tr class="product">
          <td class="name">
            <span>{{this.name}}</span>
          </td>
          <td class="price">€<span>{{this.price}}</span></td>
          <td class="quantity">
            <input type="text" value="{{this.size}}" placeholder="Size" />
          </td>
      <td class="size">
            <input type="number" value="{{this.quantity}}" placeholder="Quantity" />
          </td>
          <td class="subtotal">€<span>{{this.subtotal}}</span></td>
          <td class="action">
            <a href="/user/cart/delete/{{this.id}}" class="btn btn-remove">Remove</a>
          </td>
        </tr>
        {{/each}}
        </tbody>
    </table>
    <h2 id="total-value">Total: $<span>0</span></h2>
  </body>
</html>